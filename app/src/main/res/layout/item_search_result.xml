<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/drama_item_views_spacing"
  >

  <ImageView
    android:id="@+id/i_drama_iv_thumb"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:contentDescription="@string/content_desc_i_drama_iv_thumb"
    app:layout_constraintDimensionRatio="W,1:1"
    app:layout_constraintEnd_toStartOf="@id/guideline_v25percent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_v25percent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.25"
    />


  <TextView
    android:id="@+id/i_drama_tv_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/drama_item_views_spacing"
    android:layout_marginEnd="@dimen/drama_item_views_spacing"
    android:ellipsize="end"
    android:maxLines="1"
    android:textAppearance="@style/AppText.Title"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/guideline_v25percent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="a long draaamaa naaaaaaaaaaaaaaaaaaaaaaaaaaaaaame"
    />

</androidx.constraintlayout.widget.ConstraintLayout>