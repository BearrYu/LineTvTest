<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/padding_drama_item"
  >

  <ImageView
    android:id="@+id/i_drama_iv_thumb"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:contentDescription="@string/content_desc_i_drama_iv_thumb"
    app:layout_constraintDimensionRatio="W,4:3"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/i_drama_tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:textAppearance="@style/AppText.Title"
    app:layout_constraintStart_toStartOf="@id/i_drama_iv_thumb"
    app:layout_constraintTop_toBottomOf="@id/i_drama_iv_thumb"
    tools:text="drama name"
    />

  <TextView
    android:id="@+id/i_drama_tv_date_created"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:drawableStart="@drawable/ic_date_created"
    android:textAppearance="@style/AppText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/i_drama_tv_name"
    tools:text="2019.01.04"
    />

</androidx.constraintlayout.widget.ConstraintLayout>